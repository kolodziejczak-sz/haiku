{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "paths": {
      "@/*": ["./src/*"],
    },
    "target": "ESNext",
    "types": ["vite/client", "@astrojs/image/client"],
    "resolveJsonModule": true
  },
  "include": ["./src"]
}
