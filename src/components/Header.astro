---
import { useTranslation } from '@/features/i18n/useTranslation';
import Link from '@/components/Link.astro';

const t = useTranslation(Astro);

---
<header class="header container">
  <nav class="header__nav nav">
    <Link
      to='/'
      className="nav__logo logo"
      title="t.Header.home"
    >
      {t('pageTitle')}
      <span class="logo__icon" aria-hidden="true"></span>
    </Link>
  
    <ul class="nav__list">
      <li class="nav__item">
        <Link to="/entries" className="nav__link">{t('Header.entries')}</Link>
      </li>
      <li class="nav__item">
        <Link to="/intro" className="nav__link">{t('Header.intro')}</Link>
      </li>
      <li class="nav__item">
        <Link to="/about-me" className="nav__link">{t('Header.aboutMe')}</Link>
      </li>
    </ul>
  </nav>
</header>