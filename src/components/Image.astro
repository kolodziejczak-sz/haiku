---
import { getProps } from '@/features/utils/getProps';
// import { getImage } from '@astrojs/image';
import { Image } from '@astrojs/image/components';

export interface Props {
  aspectRatio?: string;
  class?: string;
  format?: string;
  height?: number;
  src: string;
  width?: number;
}

const { class: className, src, ...rest } = getProps<Props>(Astro);
const imagePath = `../assets/${src}`;

---
<Image src={import(imagePath)} />