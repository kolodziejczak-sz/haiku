---
import { useTranslation } from '@/features/i18n/useTranslation';
import { getSlugFromContext } from '@/features/router/getSlugFromContext';
import Link from '@/components/Link.astro';

export interface Props {
  class?: string;
}

const t = useTranslation(Astro);
const { class: className } = Astro.props;

const navList = [
  { href: '/', text: t`Components.home` },
  { href: '/intro', text: t`Components.intro` },
  { href: '/about-me', text: t`Components.aboutMe` },
];
---
<nav aria-label={t`Components.main`}>
  <ul role="list" class={className}>
    {navList.map(({ href, text }) => {
      return (
        <li>
          <Link class="link-btn hoverable" href={href}>{text}</Link>
        </li>
      );
    })}
  </ul>
</nav> 
